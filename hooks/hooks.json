{
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PLUGIN_DIR/hooks/scripts/capture-prompt.js\""
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PLUGIN_DIR/hooks/scripts/suggest-pattern.js\""
          }
        ]
      }
    ]
  }
}
